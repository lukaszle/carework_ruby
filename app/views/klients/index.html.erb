<%- model_class = Klient -%>
<div class="page-header">
  <h1><%=t '.title', :default => Klient %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:imie) %></th>
      <th><%= model_class.human_attribute_name(:nazwisko) %></th>
      <th><%= model_class.human_attribute_name(:kid) %></th>
      <th><%= model_class.human_attribute_name(:blad) %></th>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @klients.each do |klient| %>
      <tr>
        <td><%= klient.id %></td>
        <td><%= klient.imie %></td>
        <td><%= klient.nazwisko %></td>
        <td><%= klient.kid %></td>
        <td><%= klient.blad %></td>
        <td><%= klient.id %></td>
        <td><%=l klient.created_at, format: :long %></td>
        <td>
          <%= link_to klient_path(klient), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to klient_path(klient), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_klient_path,
            :class => 'btn btn-primary' %>
