<h1>Listing klients</h1>

<table>
  <thead>
    <tr>
      <th>Imie</th>
      <th>Nazwisko</th>
      <th>Kid</th>
      <th>Blad</th>
      <th>Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @klients.each do |klient| %>
      <tr>
        <td><%= klient.imie %></td>
        <td><%= klient.nazwisko %></td>
        <td><%= klient.kid %></td>
        <td><%= klient.blad %></td>
        <td><%= klient.id %></td>
        <td><%= link_to 'Show', klient %></td>
        <td><%= link_to 'Edit', edit_klient_path(klient) %></td>
        <td><%= link_to 'Destroy', klient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

