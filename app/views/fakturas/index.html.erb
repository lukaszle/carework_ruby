<%- model_class = Faktura -%>
<div class="page-header">
  <h1><%=t '.title', :default => Faktura %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tytul) %></th>
      <th><%= model_class.human_attribute_name(:data) %></th>
      <th><%= model_class.human_attribute_name(:wyslana) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fakturas.each do |faktura| %>
      <tr>
        <td><%= faktura.id %></td>
        <td><%= faktura.id %></td>
        <td><%= faktura.tytul %></td>
        <td><%= faktura.data %></td>
        <td><%= faktura.wyslana %></td>
        <td><%=l faktura.created_at, format: :long %></td>
        <td>
          <%= link_to faktura_path(faktura), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to faktura_path(faktura), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_faktura_path,
            :class => 'btn btn-primary' %>
