<h1>Listing kontos</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Konto</th>
      <th>Klient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kontos.each do |konto| %>
      <tr>
        <td><%= konto.id %></td>
        <td><%= konto.konto %></td>
        <td><%= konto.klient %></td>
        <td><%= link_to 'Show', konto %></td>
        <td><%= link_to 'Edit', edit_konto_path(konto) %></td>
        <td><%= link_to 'Destroy', konto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Konto', new_konto_path %>
